
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent">
    <include
        layout="@layout/detail_actionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        >

        <RelativeLayout
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="265dp"
               android:id="@+id/lay"
               android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="265dp"
                android:id="@+id/imgLogo"
                android:visibility="gone"
                />
            <android.support.v4.view.ViewPager
                android:id="@+id/people_pager"
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:visibility="visible"
                >

            </android.support.v4.view.ViewPager>

            

            <org.lucasr.twowayview.widget.TwoWayView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/people_list"
                android:layout_below="@+id/people_pager"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/TwoWayView"
                android:visibility="visible"
                app:twowayview_layoutManager="ListLayoutManager"/>


         </LinearLayout>
            <com.google.android.gms.ads.AdView

                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                ads:adSize="SMART_BANNER"
                android:layout_below="@id/lay"

                ads:adUnitId="ca-app-pub-6939500014189035/5918151304">
            </com.google.android.gms.ads.AdView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/adView"
                android:id="@+id/layout_disc"
                android:layout_marginTop="5dp"
                android:weightSum="4">
                <TextView

                    android:id="@+id/people_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textStyle="bold"
                   />
                <TextView
                    xmlns:ext="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/people_disc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"


                   />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/layout_disc"
                android:layout_height="match_parent"
                android:padding="0.1dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="26dp"
                android:id="@+id/view2"
                android:layout_marginRight="26dp"
                android:background="@drawable/line_history"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/people_layout_map"
                android:orientation="vertical"
                android:layout_below="@+id/view2">
                <fragment
                    android:id="@+id/people_mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:name="com.google.android.gms.maps.SupportMapFragment"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout_type"
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/people_layout_map">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Type:"
                    android:layout_marginLeft="35dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/people_type"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/layout_type"
                android:layout_height="match_parent"
                android:padding="0.1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/line_history"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout_added"
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/layout_type">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Added:"
                    android:layout_marginLeft="35dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/people_added"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/layout_added"
                android:layout_height="match_parent"
                android:padding="0.1dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/line_history"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:id="@+id/layout_added_by"
                android:weightSum="2"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/layout_added">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Added by:"
                    android:layout_marginLeft="35dp"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/people_added_by"
                    android:textSize="16sp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_below="@id/layout_added_by"
                android:layout_height="match_parent"
                android:padding="0.1dp"
                android:id="@+id/view"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:background="@drawable/line_history"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>