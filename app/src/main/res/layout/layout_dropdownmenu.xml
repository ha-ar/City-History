<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@android:color/black"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/profile_sky"
                android:layout_marginLeft="20dp"
                android:layout_margin="10dp"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="100dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                android:id="@+id/user_name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="waqas sarwar"
                android:layout_toRightOf="@id/user_image"

                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#88676767"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_list"
            android:layout_height="50dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Your Saved Searches"
                android:textColor="@android:color/white"
                android:id="@+id/List"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#88676767"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_internal"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Country"
                android:textColor="@android:color/white"
                android:id="@+id/internal"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#88676767"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_external"
            android:layout_height="50dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Push Notifications"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:id="@+id/external"

                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Switch"
                android:checked="true"
                android:id="@+id/switch1"
                android:layout_weight="1" />

            <!--<Switch-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="New Switch"-->
                <!--android:layout_weight="1"-->
                <!--android:id="@+id/switch1" />-->
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#88676767"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_profile"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Support"
                android:textColor="@android:color/white"
                android:id="@+id/category"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#88676767"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_explorar"
            android:layout_height="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Terms and  Conditions"
                android:textColor="@android:color/white"
                android:id="@+id/Explorar"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#88676767"
            android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"
        android:layout_height="15dp">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
            android:orientation="horizontal"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Logout"
            android:textColor="@android:color/white"
            android:id="@+id/logout_text"
            android:gravity="center"
            android:paddingLeft="20dp"

            android:layout_gravity="center_vertical"/>

    </LinearLayout>


</LinearLayout>